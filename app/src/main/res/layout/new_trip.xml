<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/nuevo_viaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Nuevo Viaje"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:padding="16dp"
        android:textColor="@color/text_primary"
        />

    <EditText
        android:id="@+id/et_origen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ubicación de origen"
        app:layout_constraintTop_toBottomOf="@id/nuevo_viaje"
        app:layout_constraintStart_toStartOf="@id/nuevo_viaje"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_destino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ubicación de destino"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_origen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_integrantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Integrantes (separados por coma)"
        android:layout_marginTop="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/et_destino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_crear_viaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Viaje"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_integrantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
